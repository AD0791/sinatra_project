<section id="contact-form" class="py-3">
        <div class="container">
            <h1 class="l-heading"><span class='text-primary'>We</span> Are Here For You</h1>
            <p>Please make your reservation!</p>
            <form action="/reservations/<%=@reservation.id%>" method="POST">
            <input type="hidden" id="hidden" name="_method" value="PATCH">
                <fieldset class="form-group">
                    <label for="date">Date</label>
                    <input type="date" id="date" name="date" value="<%=@reservation.date%>" required>
                </fieldset>
                <fieldset class="form-group">
                    <label for="number_of_day">Duration</label>
                    <input type="number" id="number_of_day" name="number_of_day" value="<%=@reservation.number_of_day%>" required>
                </fieldset>
                <fieldset class="form-group">
                    <label for="room">Room</label>  
                    <select name="room" id="room" value="<%=@reservation.room%>" required>
                        <option>Presidential</option>
                        <option>Suite</option>
                        <option>Normal</option>
                    </select>  
                </fieldset>
                <fieldset class="form-group">
                    <label for="occupancy">Occupancy (Max 3)</label>
                    <input type="number" id="occupancy" name="occupancy" value="<%=@reservation.occupancy%>" required>
                </fieldset>
                <fieldset class="form-group">
                    <label for="bed_size">Bed Size </label>  
                    <select name="bed_size" id="bed_size" value="<%=@reservation.bed_size%>" required>
                        <option>Large</option>
                        <option>Medium</option>
                        <option>Combo 3 personnes</option>
                    </select>  
                </fieldset>
                <!--Flash 
                <% if flash.has?(:message) %>
                    <p class="flash"><%= flash[:message] %></p>
                <% end %>
                message-->
                <button type="submit" class="btn">Submit</button>
            </form>
        </div>
    </section>

    